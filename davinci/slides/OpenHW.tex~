\begin{frame}
  \frametitle{Algunas herramientas GNU usadas en Sistemas Embebidos}
     \begin{itemize}
	\item loader 
	\item u-boot
	\item gbibc / uclibc
	\item Linux kernel
	\item busybox / GNU fileutils, shellutils and textutils
	\item dropbear / openssh
	\item boa 
	\item sablevm
    \end{itemize}
\end{frame}

